{
  "name": "get-set-fetch-extension",
  "version": "1.0.0",
  "description": "",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run copy:resources",
    "copy:resources": "npm run copy:local && npm run update:local && npm run copy:bkg && npm run copy:popup && npm run copy:admin && npm run copy:scenarios",     
    "copy:local": "cpx \"src/resources/**/*\" dist",
    "update:local": "cross-var shx sed -i s/{GSF_VERSION}/$npm_package_version/ dist/manifest.json",
    "copy:bkg": "cpx  \"node_modules/get-set-fetch-extension-background/dist/**/*\" dist/background",
    "copy:popup": "cpx \"node_modules/get-set-fetch-extension-popup/dist/**/*\" dist/popup",
    "copy:admin": "cpx \"node_modules/get-set-fetch-extension-admin/dist/**/*\" dist/admin",
    "copy:scenario-extract-resource-dist": "cpx \"node_modules/get-set-fetch-scenario-extract-resources/dist/**/*\" dist/scenarios/get-set-fetch-scenario-extract-resources/dist",
    "copy:scenario-extract-resource-pkg": "cpx \"node_modules/get-set-fetch-scenario-extract-resources/package.json\" dist/scenarios/get-set-fetch-scenario-extract-resources",
    "copy:scenarios": "npm run copy:scenario-extract-resource-dist && npm run copy:scenario-extract-resource-pkg",
    "test": "mocha test \"./test/integration/**/*.ts\" --exit",
    "test:single": "mocha test \"./test/integration/**/*.ts\" --grep \"Scenario List\""
  },
  "author": {
	  "name": "Andrei Sabau"
  },
  "license": "MIT",
  "dependencies": {
    "get-set-fetch": "^0.3.8",
    "get-set-fetch-extension-background": "1.0.0",
    "get-set-fetch-extension-popup": "^1.0.0",
    "get-set-fetch-extension-admin": "^1.0.0",
    "get-set-fetch-extension-commons": "^1.0.0",
    "get-set-fetch-scenario-extract-resources": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/connect": "^3.4.32",
    "@types/mocha": "^5.2.5",
    "@types/node-forge": "^0.8.0",
    "@types/puppeteer": "^1.12.1",
    "@types/serve-static": "^1.13.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "connect": "^3.6.6",
    "cpx": "^1.5.0",
    "cross-var": "^1.1.0",
    "jszip": "^3.2.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.4",
    "node-forge": "^0.8.2",
    "puppeteer": "^1.6.1",
    "query-string": "^6.1.0",
    "serve-static": "^1.13.2",
    "shx": "^0.3.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3",
    "vhost": "^3.0.2"
  }
}
