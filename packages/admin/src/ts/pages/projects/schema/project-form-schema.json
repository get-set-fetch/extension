{
  "title": "Project Details",
  "type": "object",
  "required": ["name", "url", "crawlOpts", "scenarioOpts"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "title": "Description",
      "default": ""
    },
    "url": {
      "type": "string",
      "title": "Start URL",
      "format": "uri"
    },

    "crawlOpts": {
      "title": "Crawl Options",
      "type": "object",
      "required": ["maxDepth", "maxResources", "crawlDelay"],
      "properties": {
        "maxDepth": {
          "type": "number",
          "title": "Maximum crawl depth",
          "description": "Start URL has depth 0. All resources linked from it have depth 1 and so on.",
          "default": -1,
          "ui": {
            "step": 1
          }
        },
        "maxResources": {
          "type": "number",
          "title": "Maximum resources",
          "description": "Maximum number of resources to be crawled per each individual site.",
          "default": 100,
          "ui": {
            "step": 1
          }
        },
        "crawlDelay": {
          "type": "number",
          "title": "Crawl delay",
          "description": "Delay in miliseconds between fetching two consecutive resources.",
          "default": 1000,
          "ui": {
            "step": 1
          }
        },
        "pathnameRe": {
          "type": "string",
          "title": "Pathname regexp",
          "description": "Only urls with a pathname matching the regexp will be scraped. Leave empty to add all links.",
          "default": ""
        }
      }
    },

    "scenarioOpts": {
      "type": "object",
      "title": "Scenario Options",
      "required": ["scenarioId"],
      "properties": {
        "scenarioId": {
          "type": "number",
          "title": "Crawl Scenario"
        },
        "description": {
          "type": "string",
          "ui": {
            "customField": "ScenarioDescription"
          }
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "ui": {
            "customField": "ScenarioLink"
          }
        }
      }
    }
  }
}