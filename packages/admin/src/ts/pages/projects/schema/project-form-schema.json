{
  "title": "Project Details",
  "type": "object",
  "required": ["name", "url", "scenarioId"],
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "url": {
      "type": "string",
      "title": "Start URL"
    },

    "crawlOpts": {
      "title": "Crawl Options",
      "type": "object",
      "required": ["maxDepth", "maxResources", "crawlDelay"],
      "properties": {
        "maxDepth": {
          "type": "number",
          "title": "Maximum crawl depth",
          "default": -1
        },
        "maxResources": {
          "type": "number",
          "title": "Maximum resources",
          "default": 100
        },
        "crawlDelay": {
          "type": "number",
          "title": "Crawl delay",
          "default": 1000
        }
      }
    },

    "scenarioId": {
      "type": "number",
      "title": "Crawl Scenario",
      "enum": [],
      "enumNames": []
    },

    "scenarioProps": {
      "type": "object",
      "title": "",
      "properties": {
        "description": {
          "type": "string"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}