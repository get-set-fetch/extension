{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    },
    "useJSXTextNode": true,
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts",
          ".tsx",
          ".d.ts"
        ]
      }
    },
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "detect"
    }
  },
  "env": {
    "browser": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never",
        "tsx": "never",
        "json": "never"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "class-methods-use-this": "off",
    "curly": [
      "error"
    ],
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "max-line-length": [
      true,
      180
    ],
    "object-literal-sort-keys": false,
    "object-curly-newline": [
      "error",
      {
        "ImportDeclaration": "never",
        "ExportDeclaration": "always"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "whitespace": [
      false,
      "check-module"
    ],
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "one-line": [
      false,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "brace-style": [
      "error",
      "stroustrup",
      {
        "allowSingleLine": false
      }
    ],
    "forin": false,
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "react/prop-types": [
      0
    ],
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "@typescript-eslint/interface-name-prefix": [
      "error",
      "always"
    ],
    "@typescript-eslint/no-angle-bracket-type-assertion": [
      "error"
    ],
    "@typescript-eslint/explicit-member-accessibility": [
      "off"
    ],
    "@typescript-eslint/explicit-function-return-type": [
      "off"
    ]
  }
}