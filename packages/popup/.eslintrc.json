{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "mocha": true    
  },
  "globals": {
    "assert": true,
    "browser": true,
    "chrome": true,
    "extension": true,
    "gsfRequire": true,
    "GsfClient": true
  },  
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "global-require": "off",
    "max-len": ["error", { "code": 130, "comments": 130 }],
    "checkLoops": false,
    "no-await-in-loop": "off",
    "brace-style": [1, "stroustrup"]
  },
  "settings": {
    "import/resolver": "eslint-import-resolver-babel-module"
  }
}