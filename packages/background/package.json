{
  "name": "get-set-fetch-extension-background",
  "version": "1.0.0",
  "description": "",
  "main": "dist/background-bundle.js",
  "module": "dist/background-bundle.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "build": "npm run clean && npm run lint && npm run build:dist && npm run copy:resources",
    "build:dist": "rollup --config rollup.config.js",
    "copy:resources": "copyfiles -u 2 src/html/*.html dist",
    "test": "nyc --reporter=lcov mocha test ./test/**/*.ts",
    "test:report": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:single": "mocha test ./test/**/*.ts --grep \"crawl until maxDepth is reached\""
  },
  "keywords": [
    "scraper",
    "extension"
  ],
  "author": "Andrei Sabau",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/get-set-fetch/extension/issues"
  },
  "homepage": "https://github.com/get-set-fetch/extension#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chrome": "0.0.76",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "coveralls": "^3.0.2",
    "indexeddbshim": "^3.8.0",
    "jsdom": "^13.1.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.4",
    "nyc": "^13.1.0",
    "patch-package": "^5.1.1",
    "puppeteer": "^1.12.2",
    "rimraf": "^2.6.2",
    "rollup-plugin-commonjs": "9.1.4",
    "rollup-plugin-ignore": "^1.0.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-tslint": "^0.1.38",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "sinon": "^6.1.4",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "get-set-fetch": "^0.3.8",
    "get-set-fetch-extension-commons": "^1.0.0",
    "url-parse": "^1.4.3"
  }
}
